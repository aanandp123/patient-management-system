<div class ="alltext">

  <h1>Schedule an Appointment</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/makeappointment" method="post">
            <div class="form-group">
              <label for="text">Who do you want to set appointment with?</label>
              <br />
              <select name ="user" required>
                <%  for(var i =0; i<person.length;i++){ %>
                  <option> <%= person[i].name%> </option>
                <%}%>
              </select>
            </div>


            <div class="form-group">
              <label for="text">Day and Time?</label>
              <input type="text" class="form-control" name="date_of_appointment" required ="required">
            </div>
            <br />
            <input type ="date" name="date" required="required" />
            <input type ="time" name ="time" required ="required"/>

            <input type="submit" class ="button" value ="Schedule">
          </form>

        </div>
      </div>
    </div>


  </div>
</div>
